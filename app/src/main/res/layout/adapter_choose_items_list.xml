<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/itemView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeTextType="uniform"

            android:textColor="@android:color/black"
            tool:text="apple"
            tool:ignore="NestedWeights,UnusedAttribute" />

        <TextView
            android:id="@+id/itemUP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:gravity="end"
            android:textColor="@android:color/holo_green_dark"
            tool:targetApi="o"
            tool:text="500 $" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/console"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">


                <Button
                    android:id="@+id/close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/close"/>

                <EditText
                    android:id="@+id/userInput"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="1"
                    android:minWidth="50dp"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no"
                    tool:ignore="LabelFor" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/up"/>

                    <Button
                        android:id="@+id/minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/down"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/addFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_green_background"
                android:text="@string/add"
                android:layout_margin="10dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/folderView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/folderImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/folder"
            tool:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/folderName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_gravity="left|center_vertical"
                android:textColor="@color/black"
                android:textSize="15sp"
                tool:text="Item 1"
                tool:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="15sp"
                android:gravity="end|center_vertical"
                android:layout_gravity="end|center_vertical"
                tool:text="item"
                tool:ignore="NestedWeights" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>